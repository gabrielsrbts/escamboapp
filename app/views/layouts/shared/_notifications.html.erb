<% if notice %>
  <%= javascript_tag "$.notify({ 
                                  message: '#{notice}',
                                }, {
                      	          type: 'success', 
                      	          placement: {from: 'top', 
                      	          	          align: 'center'},
                      	          animate: {
		                                     enter: 'animated fadeInDown',
		                                     exit: 'animated fadeOutUp'
	                                       },
                      	          delay: 5000,
                      	          timer: 1000
                      	        });" %>
<% end %>

<% if alert %>
  <%= javascript_tag "$.notify({ 
                                  message: '#{alert}',
                                }, {
                      	          type: 'danger',
                      	          placement: {from: 'top', 
                      	          	          align: 'center'}, 
                      	          delay: 5000,
                      	          timer: 1000
                      	        });" %>
<% end %>

