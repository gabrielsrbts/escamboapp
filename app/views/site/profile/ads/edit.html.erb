<%= form_for([:site, :profile, @ad]) do |f|%>
  <div class="row">
    <div class="form-group col-xs-7">
      <label><%= f.label :title %></label>
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-xs-4">
      <%= f.label 'Categoria' %>
      <%= f.collection_select :category_id, @categories_for_select, :id, :description, {}, {class: "form-control"} %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-xs-2">
      <label><%= f.label :price %></label>
      <div class="input-group">
        <div class="input-group-addon"><%= @ad.price.currency.symbol %></div>
          <%= f.text_field :price, class: "form-control" %>
        </div>
      </div>
  </div>
  <div class="row">  
    <div class="form-group col-xs-7">
      <%= f.label :picture %><br>
      <%= image_tag @ad.picture.url(:medium), class: "img-thumbnail" %>
      <%= f.file_field :picture, class:"btn" %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-xs-12">
      <label><%= f.label :description %></label>
      <%= f.text_area :description, class: "form-control", rows: 10 %>
    </div>
  </div>

  <%= submit_tag t('buttons.update'), class: "btn btn-primary"%>

<% end %>


