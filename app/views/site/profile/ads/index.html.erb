<table class="table table-hover"> 
	<thead> 
		<tr> 
			<th>#</th>
			<th>Imagem</th> 
			<th>Título</th> 
			<th>Descrição</th>
			<th>Preço</th> 
			<th>Data de Criação</th>
		</tr> 
	</thead> 
	<tbody> 
		<% @ads.each do |ad| %>
			<tr> 
		  	<th scope="row"><%= ad.id %></th> 
		  	<td><%= image_tag ad.picture.url(:thumb) %></td> 
		  	<td><%= ad.title %></td> 
		  	<td><%= ad.description %></td> 
		  	<td><%= humanized_money_with_symbol ad.price %></td> 
		  	<td><%= ad.created_at %></td> 
		  </tr> 
		<% end %>
	</tbody> 
</table>
